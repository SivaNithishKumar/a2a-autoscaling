# A2A Multi-Agent System Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# AZURE OPENAI CONFIGURATION (Required for AI routing)
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_MODEL=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
# Base Agent
BASE_AGENT_PORT=8000
BASE_AGENT_HOST=0.0.0.0

# Calculator Agent
CALCULATOR_AGENT_PORT=8002
CALCULATOR_AGENT_HOST=0.0.0.0

# Weather Agent
WEATHER_AGENT_PORT=8001
WEATHER_AGENT_HOST=0.0.0.0

# Research Agent
RESEARCH_AGENT_PORT=8003
RESEARCH_AGENT_HOST=0.0.0.0

# Move Orchestrator Agent
MOVE_ORCHESTRATOR_PORT=8004
MOVE_ORCHESTRATOR_HOST=0.0.0.0

# Infrastructure Monitor Agent
INFRASTRUCTURE_MONITOR_PORT=8005
INFRASTRUCTURE_MONITOR_HOST=0.0.0.0

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/agent.log

# =============================================================================
# A2A PROTOCOL CONFIGURATION
# =============================================================================
A2A_PROTOCOL_VERSION=0.3.0
A2A_SESSION_TIMEOUT=3600
A2A_MAX_MESSAGE_SIZE=10240
A2A_CONNECTION_TIMEOUT=30.0

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=http://prometheus:9090

# =============================================================================
# KUBERNETES CONFIGURATION
# =============================================================================
NAMESPACE=multi-agent-a2a
CLUSTER_NAME=k3s-cluster

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Grafana Admin Password (change this!)
GRAFANA_ADMIN_PASSWORD=admin123

# AlertManager Configuration
ALERTMANAGER_WEBHOOK_URL=https://your-webhook-url.com

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=false
DEVELOPMENT_MODE=false
